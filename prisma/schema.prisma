// 指定客户端生成器
generator client {
  provider = "prisma-client-js" // 生成 JavaScript/TypeScript 客户端
}

// 指定数据源
datasource db {
  provider = "postgresql"        // 使用的数据库
  url      = env("DATABASE_URL") // 从 .env 文件读取连接字符串
}

// 用户模型
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String      // 存储加密后的密码
  prompts       Prompt[]    // 用户创建的提示词
  tags          Tag[]       // 用户创建的标签
  promptTags    PromptTag[] // 用户分配的标签关联
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

// 提示词模型
model Prompt {
  id          String   @id @default(cuid())
  title       String
  content     String
  description String?
  version     String   @default("1.0.0")
  tags        PromptTag[]                                                                  // 一份提示词可以关联多个标签
  creatorId   String                                                                       // 创建者ID
  creator     User     @relation(fields: [creatorId], references: [id], onDelete: Cascade) // 创建者
  isPublic    Boolean  @default(true)                                                      // 是否公开
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// 标签模型
model Tag {
  id        String   @id @default(cuid())
  name      String   @unique
  type      TagType  @default(PUBLIC)
  prompts   PromptTag[]                                                                  // 一个标签可以关联多份提示词
  creatorId String                                                                       // 创建者ID
  creator   User     @relation(fields: [creatorId], references: [id], onDelete: Cascade) // 创建者
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// 多对多关联表
model PromptTag {
  promptId   String
  tagId      String
  assignedAt DateTime @default(now())
  assignedBy String   // 关联到用户ID
  assigner   User     @relation(fields: [assignedBy], references: [id])

  prompt    Prompt @relation(fields: [promptId], references: [id], onDelete: Cascade)
  tag       Tag    @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([promptId, tagId])
}

enum TagType {
  PUBLIC
  PRIVATE
}
